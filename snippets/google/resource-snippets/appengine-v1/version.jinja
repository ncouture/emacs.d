resources:
- name: {{ env["deployment"] }}
# type: appengine.v1.version
  type: gcp-types/appengine-v1:apps.services.versions
  properties:
    servicesId: default
    appsId: {{ env["project"] }}
    deployment:
      files:
        main.py:
          sourceUrl: https://storage.googleapis.com/admin-api-public-samples/hello_world/main.py
    handlers:
      - script:
          scriptPath: main.app
        securityLevel: SECURE_OPTIONAL
        urlRegex: /
    runtime: python27
    threadsafe: true
