resources:
#- type: iam.v1.serviceAccount
- type: gcp-types/iam-v1:projects.serviceAccounts
  name: test-account
  properties:
    accountId: crispin-{{ properties['accountIdSuffix'] }}
    displayName: {{ properties['displayName'] }}
#- type: iam.v1.serviceAccounts.key
- type: gcp-types/iam-v1:projects.serviceAccounts.keys
  name: test-account-key
  properties:
    parent: $(ref.test-account.name)
    privateKeyType: TYPE_GOOGLE_CREDENTIALS_FILE
- action: gcp-types/iam-v1:iam.projects.serviceAccounts.testIamPermissions
  name: test-iam-permissions
  properties:
    resource: projects/{{ env["project"] }}/serviceAccounts/$(ref.test-account-key.privateKeyData.base64Decode().load().client_email)
    permissions:
    - iam.serviceAccounts.getIamPolicy
